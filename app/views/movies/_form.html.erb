<%= form_for movie, html: { class: "form" } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :director_id %>
  <%= f.collection_select :director_id, Director.all, :id, :name, prompt: "Pick a director" %>
  <br>
  <%= f.label :year %>
  <%= f.text_field :year %>
  <br>
  <%= f.submit submit_label %>
<% end %>
